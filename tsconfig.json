{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "build",
    "paths": {
      "*": [ "./types/*" ]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "strict": true,
    "target": "es2019"
  },

  "include": [ "./**/*" ],
  "exclude": [ "build", "node_modules", "test" ]
}
